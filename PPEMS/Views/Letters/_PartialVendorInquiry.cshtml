@model VendorInquiryViewModel
<div class="row">
    <div class="col-xs-12">
        <div class="card-box">
            <!-- <div class="panel-heading">
                <h4>Invoice</h4>
            </div> -->
            <div class="panel-body">
                <div class="clearfix">
                    <div class="pull-left">
                        <h3 class="logo">PAK PREMIER ENGG</h3>
                    </div>
                    <div class="pull-right">
                        <h5>
                            Refrence # <br>
                            <small>@Model.ReferenceNo</small>
                        </h5>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="pull-xs-left m-t-30">
                            <address>
                                <strong>@Model.VendorCompanyName</strong><br>
                                @Model.VendorAddress<br>
                                @*San Francisco, CA 94107<br>
                                    <abbr title="Phone">P:</abbr> (123) 456-7890*@
                            </address><br />
                            <address>
                                <strong>Attn: </strong>@Model.Attention<br />
                                <strong>Subject: </strong>@Model.Subject<br />
                            </address>
                        </div>
                        <div class="pull-xs-right m-t-30">
                            <p><strong>Date: </strong> @Model.Date</p>
                            @*<p class="m-t-10"><strong>Order Status: </strong> <span class="label label-danger">Pending</span></p>
                                <p class="m-t-10"><strong>Order ID: </strong> #123456</p>*@
                        </div>
                    </div><!-- end col -->
                </div>
                <!-- end row -->
                <br />
                <br />
                <div class="m-h-50"></div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            @Html.Raw(Model.Body)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="clearfix m-t-30">
                            Thank You
                            <h5 class="small text-inverse font-600"><b>From: PAK PREMIER ENGG</b></h5>
                            <br />
                            <h5 class="small text-inverse font-600"><b>From: @Model.Sender</b></h5>
                            <h5 class="small text-inverse font-600"><b>@Model.SenderDesignation</b></h5>
                            @*<small>
                                    All accounts are to be paid within 7 days from receipt of
                                    invoice. To be paid by cheque or credit card or direct payment
                                    online. If account is not paid within 7 days the credits details
                                    supplied as confirmation of work undertaken will be charged the
                                    agreed quoted fee noted above.
                                </small>*@
                        </div>
                    </div>
                    @*<div class="col-md-3 col-sm-6 col-xs-6 col-md-offset-3">
                            <p class="text-xs-right"><b>Sub-total:</b> 2930.00</p>
                            <p class="text-xs-right">Discout: 12.9%</p>
                            <p class="text-xs-right">VAT: 12.9%</p>
                            <hr>
                            <h3 class="text-xs-right">USD 2930.00</h3>
                        </div>*@
                </div>
                <hr>
                <div class="hidden-print">
                    <div class="pull-xs-right">
                        <a href="javascript:window.print()" class="btn btn-dark waves-effect waves-light"><i class="fa fa-print"></i></a>
                        @*<a href="#" class="btn btn-primary waves-effect waves-light">Submit</a>*@
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>